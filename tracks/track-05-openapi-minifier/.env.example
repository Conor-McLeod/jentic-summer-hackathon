# Environment configuration for OpenAPI Minifier
# Most settings are optional - tool works with defaults

# Output preferences
DEFAULT_OUTPUT_FORMAT=yaml  # yaml or json
INCLUDE_DESCRIPTIONS=true   # Include description fields in output
INCLUDE_EXAMPLES=false      # Strip examples to reduce size
STRICT_VALIDATION=true      # Validate all outputs

# Performance settings
MAX_SPEC_SIZE_MB=50        # Maximum input spec file size
CACHE_ENABLED=true         # Enable caching for repeated operations
PARALLEL_PROCESSING=false  # Enable parallel schema processing (experimental)

# Development settings
DEBUG_MODE=false           # Enable detailed logging
LOG_LEVEL=INFO            # DEBUG, INFO, WARNING, ERROR
TEMP_DIR=./tmp            # Directory for temporary files

# Optional: External validator URLs (for advanced validation)
# SWAGGER_VALIDATOR_URL=https://validator.swagger.io/validator/debug
# OPENAPI_VALIDATOR_URL=https://apitools.dev/swagger-parser/online/