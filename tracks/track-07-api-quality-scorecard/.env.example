# API Quality Scorecard Configuration

# Optional: Custom scoring weights (0.0 to 1.0)
SCORE_WEIGHT_DOCUMENTATION=0.25
SCORE_WEIGHT_SCHEMAS=0.25
SCORE_WEIGHT_ERRORS=0.20
SCORE_WEIGHT_USABILITY=0.20
SCORE_WEIGHT_AUTH=0.10

# Report generation settings
DEFAULT_OUTPUT_FORMAT=html
REPORT_INCLUDE_CHARTS=true
REPORT_INCLUDE_EXAMPLES=true

# Analysis thresholds
MIN_DESCRIPTION_LENGTH=10
MAX_OPERATION_PARAMETERS=15
MAX_SCHEMA_DEPTH=5

# Optional: External validation services
OPENAPI_VALIDATOR_URL=https://validator.swagger.io/validator
ENABLE_EXTERNAL_VALIDATION=false

# Development settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
CACHE_ANALYSIS_RESULTS=true